# Zippy Voice Configuration
# Copy this to .env and fill in your values

# Clawdbot gateway URL (required)
GATEWAY_URL=http://YOUR_CLAWDBOT_IP:18789

# Path to whisper.cpp model file (required)
WHISPER_MODEL=/path/to/ggml-base.en.bin

# Server port (optional, default: 8080)
PORT=8080

# Telegram chat ID to send visible transcripts to (optional)
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_USER_ID

# Temp directory for audio uploads (optional)
UPLOAD_DIR=/tmp/zippy-voice
